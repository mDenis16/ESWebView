
<Window x:Class="ESWebView.ConfigurationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ESWebView"
        mc:Ignorable="d"
        Loaded="ConfigurationWindow_Loaded"
        Title="Configuration" Height="450" Width="400">

    <DockPanel LastChildFill="False" Margin="5">
        <ScrollViewer Height="370" DockPanel.Dock="Top">
            <Grid x:Name="GridConfig" ShowGridLines="True" VerticalAlignment="Stretch" Height="400">
                <Grid.ColumnDefinitions>

                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>

                </Grid.RowDefinitions>
            </Grid>
        </ScrollViewer>
        <StackPanel DockPanel.Dock="Bottom" Height="20" HorizontalAlignment="Right" Orientation="Horizontal">
            <Button x:Name="btnClose" Content="Close" Width="75" />
            <Button x:Name="btnSave" Content="Save" Width="75" Margin="10 0 0 0" Click="btnSave_Click"  />
        </StackPanel>

    </DockPanel>

</Window>
